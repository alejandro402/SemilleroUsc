@page
@model IndexModel
@{
    ViewData["Title"] = "Semilleros";
}

@if (Model.Mensaje != null)
{
    <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close"> 

          <span aria-hidden="true">&times;</span>

        </button>

        @Model.Mensaje
    </div>
}

<form method="POST">
@if(Model.Semilleros.Count() > 0){

  <br>
  

      @foreach (var item in Model.Semilleros)
      {        

        <div class="card">
        <div class="card-header">
          @Html.DisplayNameFor(m => m.Semilleros.FirstOrDefault().nombreSemillero):
          @Html.DisplayFor(m => item.nombreSemillero)
        </div>
        <div class="card-body">
          <h5 class="card-title">@Html.DisplayNameFor(m => m.Semilleros.FirstOrDefault().descripcionSemillero):
            @Html.DisplayFor(m => item.descripcionSemillero)</h5>
          <p class="card-text">@Html.DisplayNameFor(m => m.Semilleros.FirstOrDefault().necesidadesSemillero):
            @Html.DisplayFor(m => item.necesidadesSemillero)</p>
          <button asp-page-handler="Delete" asp-route-id="@item.idSemillero" onclick="return confirm('¿Si quieres eliminar el semillero?')" class="btn btn-danger btn-sm">Eliminar</button>
              
              <a asp-route-id = "@item.idSemillero" asp-page ="edit" class="btn btn-dark btn-sm">Editar</a>
              
              <a asp-route-id = "@item.idSemillero" asp-page ="Interesado" class="btn btn-success btn-sm">Unirme</a>
              
              <a asp-route-id = "@item.idSemillero" asp-page ="verInteresados" class="btn btn-dark btn-sm">Interesados</a>
        </div>
      </div>



  

         

      }

  

}else{

  <p>No hay semilleros o eventos nuevos</p>

}

</form>
